<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Navigation View -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header with Menu and Login buttons -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:background="@color/black">

            <Button
                android:id="@+id/buttonMenu"
                android:layout_width="108dp"
                android:layout_height="53dp"
                android:background="@color/black"
                android:drawableLeft="@drawable/menu"
                android:drawablePadding="-10dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:text="Menu"
                android:textColor="@color/green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/building">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/item_border"/>
            </LinearLayout>
        </ScrollView>

        <!-- Bottom Button Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center">

            <!-- Schedule Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="4dp">

                <Button
                    android:id="@+id/buttonSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trong"
                    android:background="@drawable/button_background"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>

            <!-- Survey Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="4dp">

                <Button
                    android:id="@+id/buttonSurveySchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thi"
                    android:background="@drawable/button_background"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>

            <!-- View Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="4dp">

                <Button
                    android:id="@+id/buttonFeature1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Xem"
                    android:background="@drawable/button_background"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>

            <!-- Notification Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="4dp">

                <Button
                    android:id="@+id/buttonFeature2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tb"
                    android:background="@drawable/button_background"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>

            <!-- Exit Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="4dp">

                <Button
                    android:id="@+id/buttonFeature3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thoat"
                    android:background="@drawable/button_background"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
