<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/item_border"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lịch Học Trong Ngày"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColorHighlight="@color/light_cyan"
        android:textColor="@android:color/holo_red_light"
        android:layout_marginBottom="8dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/stt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="STT"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/ma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Mã lớp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tenLopHocPhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Tên lớp học phần"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/giangVien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Giảng viên"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/thoiKhoaBieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Thời khóa biểu"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/ngayHoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Ngày học"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/hocOnline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Học online"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/ghiChu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Ghi chú"
        android:textColor="@android:color/black"/>
</LinearLayout>
